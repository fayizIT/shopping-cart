<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-3">
                <div class="card">
                    <img class="card-img-top" src={{this.image}}  alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}   </h5>
                        <p class="card-text">{{this.decription}}  </p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            {{/each}}
            
        </div>
    </div>
</section>