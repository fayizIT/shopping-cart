<section style="width: 400px; margin: 0 auto;">
    <h2 style="text-align: center;">Edit Product</h2>
    <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
        <div style="margin-bottom: 15px;">
            <label for="name" style="font-weight: bold;">Name:</label>
            <input type="text" id="name" name="name" required style="width: 100%; padding: 5px;" value="{{product.name}}">
        </div>
        <div style="margin-bottom: 15px;">
            <label for="category" style="font-weight: bold;">Category:</label>
            <input type="text" id="category" name="category" required style="width: 100%; padding: 5px;" value="{{product.category}}">
        </div>
        <div style="margin-bottom: 15px;">
            <label for="price" style="font-weight: bold;">Price:</label>
            <input type="number" id="price" name="price" required style="width: 100%; padding: 5px;" value="{{product.price}}">
        </div>
        <div style="margin-bottom: 15px;">
            <label for="description" style="font-weight: bold;">Description:</label><br>
            <input type="text" name="description" class="form-control" value="{{product.description}}">
        </div>
        <div style="margin-bottom: 15px;">
            <label for="image" style="font-weight: bold;">Image:</label>
            <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px; height:auto" id="imgView" class="pt-3">
            <input type="file" id="image" name="Image" style="width: 100%;" onchange="viewImage(event)">
        </div>
        <div>
            <input type="submit" value="Submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; cursor: pointer;">
        </div>
    </form>
</section>

<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0]);
    }
</script>
